{
  "$schema": "https://json.schemastore.org/tsconfig",
  "_version": "20.1.0",

  "compilerOptions": {
    "lib": ["es2023"],
    "module": "node16",
    "target": "es2022",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16", 
    "baseUrl": "./", 
    "paths": {
      "@/*" : ["./src/*"], 
      "@test/*" : ["./test/*"], 
    }, 
    "types": [
      "vitest/globals"
    ]
  }, 
  "include": [
    "src/**/*.ts", 
    "test/**/*.ts",
    "src/@types/**/*"    
], 
  "exclude": [
    "dist/**/*",
    "node_modules/**/*"
  ], 
}